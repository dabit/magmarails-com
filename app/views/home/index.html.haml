%script#temp-spotlight{:type => "text/x-template"}
  #spotlight.slide.active.mask
    .container
      = image_tag 'home/gray-reylero.svg', class: 'img-gray'
      = image_tag 'home/color-reylero.svg', class: 'img-color'
      = image_tag 'home/bottom-bagde.svg', class: 'bottom-badge'
    = link_to '#', id: 'unmask' do
      = image_tag 'home/reylero-pulling.svg'

%script#temp-keynotes{:type => "text/x-template"}
  #keynotes.slide
    .container
      = image_tag 'keynotes/keynotes-main.svg'

%script#temp-call-for-papers{:type => "text/x-template"}
  #call-for-papers.slide
    .container
      = image_tag 'cfp/cfp-main.svg'
      = link_to 'http://cfp.magmaconf.com' do
        = image_tag 'cfp/cfp-link.svg'
%script#temp-sponsoring{:type => "text/x-tempplate"}
  #sponsoring.slide
    .container
      - if flash[:alert]
        .errors= flash[:alert]
      - if flash[:notice]
        .notice= flash[:notice]
      = form_tag(contacts_path, :remote => true) do
        %label Name
        = text_field_tag 'contact[name]'
        %label Email
        = text_field_tag 'contact[email]'
        %label Company
        = text_field_tag 'contact[company]'
        .control-group
          .controls
            = submit_tag "SEND", class: 'btn'




#slider.spotlight.mask



  = link_to 'http://magmazine.magmaconf.com/en/faq', class: 'magmazine-footer hidden-desktop hidden-tablet' do
    = image_tag 'mobile/magmazine.png'
  = render 'partials/footer'

:javascript
  $(function() {
    window.home = new Magma.home;
    if ( $(window).width() < 700 ) {
      setTimeout(function(){
        // Hide the address bar!
        window.scrollTo(0, 1);
      }, 0);
    }
    window.home.init_large_displays_unmask();
    window.home.preload_images();
  });

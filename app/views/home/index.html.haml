%script#temp-sponsoring{:type => "text/x-tempplate"}
  #sponsoring.slide
    .container
      - if flash[:alert]
        .errors= flash[:alert]
      - if flash[:notice]
        .notice= flash[:notice]
      = form_tag(contacts_path, :remote => true) do
        %label Name
        = text_field_tag 'contact[name]'
        %label Email
        = text_field_tag 'contact[email]'
        %label Company
        = text_field_tag 'contact[company]'
        .control-group
          .controls
            = submit_tag "SEND", class: 'btn'




